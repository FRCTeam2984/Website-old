.index{
  margin: index-margin 0;
  color: color-default;
  iframe{
    max-width:100%;
  }
}

.index-wrapper{
  display: table;
  margin-bottom: 50px;
  white-space: nowrap;
  width: 100%;
  .image{
    width: 50%;
    text-align: center;
    vertical-align: middle;
    display:table-cell;
    img{
      max-width: 80%;
      max-height: 25em;
      display:block;
      margin:auto;
    }
  }
  .index-section-wrapper{
    width:40%;
    display:table-cell;
    vertical-align: middle;
    .smaller{
      font-size:0.8em;
    }
    img{
      max-height: none;
    }
  }
  .index-section{
    width:60%;
    white-space:normal;
    text-align: center;
    margin: auto;
    p{
      font-size: 1.3em;
      margin-top: 0.3em;
      margin-bottom: 0.3em;
    }
    h2{
      a{
        margin:0;
      }
      font-size: 2em;
      margin: 0;
    }
    a{
      margin-left: 0.5em;
      margin-right: 0.5em;
    }
    @media mq-tablet{
      width:80%;
      margin-bottom: 20px;
      p{
        font-size: 1.0em;
      }
      h2{
        font-size: 1.6em;
      }
    }
    @media mq-mobile{
      margin-bottom: 10px;
      width:80%;
      p{
        font-size: 0.8em;
      }
      h2{
        font-size: 1.2em;
      }
      a{
        margin-left: 0.25em;
        margin-right: 0.25em;
      }
    }
  }
  .two-text {
    .index-section{
      width: 70%;
    }
    font-size: 0.8em;
    width:45%;
    @media mq-mobile{
      width: 100%;
      display:block;
      margin-bottom:2em;
    }
  }
}

.index-sponsors{
  text-align: center;
  word-break: break-all;
  h2{
    font-size: 2em;
  }
  @media mq-tablet{
    h2{
      font-size: 1.4em;
    }
  }
  @media mq-mobile{
    h2{
      font-size: 1.0em;
    }
  }
  .caption{
    display:none;
  }
  img{
    max-width: 40%;
    width: 300px;
    vertical-align:middle;
    display:inline-block;
    margin: 20px;
  }
}

.index-outer{
  max-width: 1200px;
}

.donate-wrapper{
  display:block;
  width: 100%;
  h3{
    text-align: center;
    top:0;
  }
}

.donate-center{
  text-align: center;
}

.donate-left-wrapper{
  width: 49%;
  display:inline-block;
}

.donate-right-wrapper{
  width: 50%;
  display:inline-block;
  a{
    font-size: 2em;
    color: #FAFAFA;
    background-color: color-link;
    padding: 0.5em;
    border-radius: 0.2em;
  }
  .headerlink{
    padding:0;
  }
  text-align: center;
  vertical-align: top;
}

.lessons{
  text-align: center;
  a{
    width:100%;
    height:100%;
  }
  a:hover{
    border:none;
    text-decoration: none;
  }
}

.lesson{
  width:80%;
  max-width: 350px;
  border: solid 1px;
  border-color: #d0d0d0;
  border-radius: 3px;
  background-color: #F7f7f7;
  display: inline-block;
  margin: 2em;
  transition: border-color 0.4s, background-color 0.4s;
  height:300px;
  @media mq-mobile{
    height:250px;
  }
  vertical-align: middle;
  img{
    margin-top:0.8em;
    max-width:80%;
    max-height: 178px;
  }
  .title{
    color:#444;
    font-size:2em;
    font-weight: 700;
    margin-top:0.2em;
    margin-bottom: 0.1em;
    text-align: center;
  }
  .description{
    color:#444;
    font-size:0.9em;
    margin-top:0.2em;
    margin-bottom: 0.1em;
    margin-left: 2em;
    margin-right: 2em;
  }
}
.lesson:hover{
  border-color:#aaa;
  background-color: #EEE;

}

.navigation-bar{
  left:0;
  right:0;
  top:1em;
  position: relative;
  height: 20px;
  border-bottom: solid 1px #CCC;
  a{
    text-decoration: none;
  }
  .next-div{
    float:right;
  }
  .prev-div, .home-div{
    float:left;
  }
  .navigation-title{
    width:60%;
    margin-left: 20%;
    text-align:center;
  }
}

.max-img-width-six{
  img{
    max-width: 600px;
    width: 100%;
  }
}

.index{
  ol{
    list-style-type: upper-alpha;
  }
}

.extra-donate{
  img{
    max-height:300px;
    max-width:80%;
  }
}

.nobr{
  white-space: nowrap;
}
