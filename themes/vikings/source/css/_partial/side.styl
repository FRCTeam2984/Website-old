.sideWrapper
  display: table;
  border-spacing: 5px;

.leftSidePane
  display:table-cell
  vertical-align: middle;
  p
    margin-top: 0;

.rightSidePane
  display:table-cell;
  text-align: center;
  vertical-align: middle;
  .caption
    margin-bottom: 10px;

@media mq-tablet
  .sideWrapper
    display: inline-block;
  .leftSidePane[style]
    display:block
    width:100% !important;
    p
      margin-top: 0;
  .rightSidePane[style]
    display:block;
    width: 100% !important;

@media mq-mobile
  .sideWrapper
    display: inline-block;
  .leftSidePane[style]
    display:block
    width:100% !important;
    p
      margin-top: 0;
  .rightSidePane[style]
    display:block;
    width: 100% !important;

.columnWrapper
  display: inline-block;

.columnSeperator
  float:left;

.overline
  text-decoration:overline;

.maxAspectKeep{
  position:relative;
  padding-bottom:56.25%;
  height:0;
  overflow:hidden;
  iframe {
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  }
}

.logoBackground{
  display:inline-block;
  background-color: rgba(45, 45, 45, 0.5);
  box-shadow: 0 0 20px 10px rgba(45, 45, 45, 0.5);
}
